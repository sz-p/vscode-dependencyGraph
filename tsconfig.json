{
	"compilerOptions": {
    "esModuleInterop": false,
		"module": "commonjs",
		"target": "es6",
		"outDir": "outExtension",
		"lib": [
			"es6"
		],
    "allowJs": true,
		"sourceMap": true,
		"rootDirs": ["src", "packages/*"],
	},
  "references": [{
    "path": "./packages/dependency-tree"
  }],
  "rootDir": ".",
	"exclude": [
		"node_modules",
		".vscode-test",
		"./src/webView/**/*",
    "./tests/**/*",
    "./packages/**/*",
    "./outExtension/**/*",
    "./outWebView/**/*",
	]
}
