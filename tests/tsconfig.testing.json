{
  "ts-node": {
    "files": true
  },
  "include": [ "../src/**/*","../packages/**/*","../tests/**/*"],
  "compilerOptions": {
    "allowJs": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "outExtension",
		"lib": [
			"es6"
		],
		"sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["../src/*"]
    },
    "typeRoots": ["../node_modules/@types"]
	},
  "exclude": [
		"../node_modules/**/*",
    "./fileSystemTester/**/*"
	]
}
