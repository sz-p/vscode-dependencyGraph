// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
	"tasks": [
		{
      "label": "build plugin",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
    },
    {
      "label": "build webView",
      "type": "npm",
      "isBackground": true,
      "script": "buildWebView",
      "presentation": {
				"reveal": "never"
			},
    },
    {
      "label": "Build All",
      "dependsOn": ["build plugin", "build webView"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
    }
	]
}
